set nocompatible
syntax on

set tabstop=2
set shiftwidth=2
set expandtab

set nobackup
set noswapfile
set hidden
set ruler
set incsearch
set virtualedit=all
set showmatch
set autoindent
set number

set title

set pastetoggle=<F2>
nnoremap ; :
"not too sure about this mapleader stuff
let mapleader = ","

"disable arrow keys for the most part
map <up> <nop>
map <down> <nop>
map <left> <nop>
map <right> <nop>
